
<%= form_for @user do |f| %>
  <%= f.label :username, "User Name", class: "username" %>
  <%= f.text_field :username, placeholder: "Your name here" %>
<br>
  <%= f.label :email, "Insert your email", class: "email"%>
  <%= f.email_field :email, placeholder: "email@email.com" %>
<br>
  <%= f.label :password , class: "password"%>
  <%= f.password_field :password %>
<br>
<%= f.submit %>

<%= render 'layouts/errors'%>

<% end %>
